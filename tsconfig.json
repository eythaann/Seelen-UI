{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "readable-types",
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "paths": {
      "seelen-core": ["./lib/src/lib.ts"],
    },
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}