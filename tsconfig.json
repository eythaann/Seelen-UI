{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": [
      "react",
      "readable-types",
      "node"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@icons": [
        "libs/ui/react/components/Icon/icons.ts"
      ],
      "@shared": [
        "libs/ui/react/utils/index.ts"
      ],
      "@shared/*": [
        "libs/widgets-shared/*"
      ],
      "react": [
        "./node_modules/preact/compat/"
      ],
      "react/jsx-runtime": [
        "./node_modules/preact/jsx-runtime"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ],
      "react-dom/*": [
        "./node_modules/preact/compat/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "libs/core/**"
  ]
}
