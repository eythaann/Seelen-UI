          "enabled": true,
          "offset": 0.0,
          "width": 3.0
        },
        "defaultLayout": "default.yml",
        "enabled": false,
        "floating": {
          "height": 500.0,
          "width": 800.0
        },
        "resizeDelta": 10.0,
        "workspaceGap": 10,
        "workspaceMargin": {
          "bottom": 0,
          "left": 0,
          "right": 0,
          "top": 0
        },
