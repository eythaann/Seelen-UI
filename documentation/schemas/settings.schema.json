      "type": "object",
      "properties": {
        "enabled": {
          "default": true,
          "type": "boolean"
        },
        "offset": {
          "default": 0.0,
          "type": "number",
          "format": "double"
        },
        "width": {
          "default": 3.0,
          "type": "number",
          "format": "double"
        }
      }
    },
    "FancyToolbarSettings": {
      "type": "object",
      "properties": {
        "enabled": {
          "description": "enable or disable the fancy toolbar",
          "default": true,
          "type": "boolean"
        },
        "height": {
          "description": "height of the fancy toolbar",
          "default": 30,
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "hideMode": {
          "description": "hide mode",
          "default": "Never",
          "allOf": [
            {
              "$ref": "#/definitions/HideMode"
            }
          ]
        },
        "placeholder": {
          "description": "default placeholder for the fancy toolbar",
          "default": "default.yml",
          "type": "string"
